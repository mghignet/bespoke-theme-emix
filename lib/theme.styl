// Bespoke Classes: https://github.com/markdalgleish/bespoke-classes
// Stylus: http://learnboost.github.io/stylus

@import url('https://fonts.googleapis.com/css?family=PT+Mono')
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,400i,600,700');

@import 'normalizecss/normalize.css'

* {
  font-family: 'PT Mono', sans-serif
  font-size: 8px
}

$primary-color                  = #005EBF;
$quote-background-color         = #FFCE86;
$text-color                     = #3a3a3a;

h1, h2, h3, h4, h5, h6
  letter-spacing: -1px
  line-height: 1.3
  color: $text-color;
  font-weight: normal;
  margin-top: 0;

h1
  font-size: 2.85rem;
  margin-bottom: 1rem;

h2
  font-size: 2.15rem;
  margin-bottom: 1rem;
  font-weight: 400;

h3
  font-size: 1.45rem;
  margin-bottom: 1rem;

h4
  font-size: 1.2rem;
  margin-bottom: 1rem;

h1, h2, h3, h4, h5, h6
  word-spacing: 0.09em;

a:link,
a:visited {
  color: #0096dd
  text-decoration: none
}

a:hover,
a:focus,
a:active {
  color: $primary-color
  text-decoration: underline
}

.bespoke-parent
  text-size-adjust: auto
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  overflow: hidden

.bespoke-scale-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  pointer-events: none
  .bespoke-active
    pointer-events: auto

.bespoke-slide
  width: 320px
  height: 240px
  position: absolute
  top: 50%
  left: 50%
  margin-left: -(@width / 2)
  margin-top: -(@height / 2)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.bespoke-inactive
  opacity: 0
  pointer-events: none

.bespoke-bullet
  .token.comment
    color: #CDFF17

.bespoke-bullet-inactive
  opacity: 0
  pointer-events: none

.bespoke-backdrop
  position: absolute
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index: -1
  opacity: 0

.bespoke-backdrop-active
  opacity: 1
  transition: opacity 0.3s

.bespoke-progress-parent
  position: absolute
  top: 0
  left: 0
  right: 0
  height: .3vw

.bespoke-progress-bar
  position: absolute
  height: 100%
  background: $primary-color
  transition: width .3s ease

section
  max-height: 100vh
  max-width: 100vw
  box-sizing: border-box

  > img
    max-height: 90%
    max-width: 90%

.centered
  text-align: center

.emphatic
  background: #1385FB

.emphatic-text
  color: white

  h1, h2, h3, h4, h5, h6
    color: white

.quote-bg
  background: $primary-color

.quote,
.subquote {
  color: white
  font-family: 'PT Mono', sans-serif
  font-size: 2rem
  text-align: right
}

.subquote
  font-size: 1.4rem
  margin-top: 2em

ul
  list-style-type: none
  padding-left: 0

ul.column
  height: 100%
  display: flex
  flex-direction: column
  justify-content: space-between

  li
    width: 100%
    height: 100%
    min-height: 0
    flex: 1 1 0

    &.double
      flex: 2 1 0
    &.triple
      flex: 3 1 0
    &.quadruple
      flex: 4 1 0
    &.quintuple
      flex: 5 1 0

    img
      max-width: 100%
      max-height: 100%

    ul
      height: 100%

ul.row
  width: 100%
  display: flex
  flex-direction: row
  justify-content: space-between

  li
    flex: 1 1 0
    text-align: center
    margin-left: 3em;
    margin-right: 3em;

    img
      max-width: 100%
      max-height: 100%
